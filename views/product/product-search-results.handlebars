<!-- stylesheet -->
<link rel="stylesheet" href="/public/css/product/product-category.css">
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<!-- script -->
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script src="/public/js/product/product-search-filter.js"></script>

<!-- products result starts from here -->
<article>
	
	<h1>â€¢ {{ mainTitle }}</h1>
		
	<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">

		<div class="col-md-2">

		</div>

		<div class="col-md-9" id="products-list" style="margin-bottom: 3rem;">
			{{#each product}}
			<div class="panel panel-default item">
				<div class="panel-heading" role="tab">
					<a role="button" href="/product/id/{{_id}}" data-parent="#accordion" aria-expanded="true">
						<h2 class="panel-title head">
							{{title}}
						</h2>
					</a>
				</div>

				<div class="panel-collapse collapse in" role="tabpanel">
					<div class="panel-body">
						<div class="col-md-12">
							<div class="row">
								<img src="{{images.[0]}}" alt="{{title}}" />
							</div>

							<div class="row detail">
								<div class="col-md-6 price">
									<i class="fa fa-inr"></i>{{price }}
								</div>
								<div class="col-md-6">
									<input type="submit" class="btn btn-default" onclick="window.location.href = '/product/id/{{_id}}'" value="View Details"
									/>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			{{/each}}
		</div>
		<!-- right panel section ends here -->

	</div>	
</article>
<!-- products result ends here -->
<input type="text" class="form-control hidden" value="{{searchedOf}}" id="searched-value">